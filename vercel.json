{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "framework": "vite",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "env": {
      "VITE_ESPRESSO_API_URL": "@espresso_api_url"
    },
    "build": {
      "env": {
        "VITE_ESPRESSO_API_URL": "@espresso_api_url"
      }
    },
    "functions": {
      "app/api/**/*.js": {
        "runtime": "nodejs18.x"
      }
    },
    "rewrites": [
      {
        "source": "/embed",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/embed",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "ALLOWALL"
          }
        ]
      }
    ]
  }